[push]
	default = upstream
#	autoSetupRemote = true
[fetch]
    prune = true
[pull]
    rebase = true
[core]
	editor = nvim
[alias]
    a   = add
    aa  = add .
    ap  = add -p
    b   = branch
    bd  = branch -d
    bD  = branch -D
    bdr = !pwsh -command Remove-GitRemoteBranch
    cl = !pwsh -command Git-CloseAndClean
    ch  = checkout
    chb = checkout -b
    cfg = config --global -e
    co  = commit
    com = commit -m
    coa = commit --amend
    con = commit --amend --no-edit
    cowip = commit -m "WIP"
    cp  = cherry-pick
    cpc = cherry-pick --continue
    cpa = cherry-pick --abort
    d   = show-whitespace diff
    ds  = show-whitespace diff --staged
    f   = fetch
    l   = log
    g   = log --graph --oneline --branches
    ga  = log --graph --oneline --all
    mt  = mergetool
    or  = !pwsh -command Invoke-GitRemoteUrl
    opr = !pwsh -command Invoke-GitPullRequest
    ps  = push
    psf = push -f
    pl  = pull
    # ps  = !pwsh -command Invoke-GitPushDev
    # psf = !pwsh -command Invoke-GitPushDev -f
    rep = remote prune origin
    rs  = reset
    rsh = reset --hard
    rswip = reset head~
    rb  = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rba = rebase --abort
    s   = status
    sh  = stash

    show-whitespace = !git -c core.pager='sed s/\\ /Â·/g | sed s/\\\t/ï¿«\\ \\ \\ /g | less -R' $@ && :
[init]
	defaultBranch = main
